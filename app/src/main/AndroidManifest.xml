<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mayafif">

    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logoapk"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logoapk_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MayAfif"
        tools:targetApi="31">
        <activity
            android:name=".laporanpenjualan"
            android:exported="false" />
        <activity
            android:name=".InputCode"
            android:exported="false" />
        <activity
            android:name=".Homelayout"
            android:exported="false" />
        <activity
            android:name=".DaftarAwal"
            android:exported="false" /> <!-- Splash Screen Pertama Muncul, Dibawahnya Baru Main Activity -->
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>